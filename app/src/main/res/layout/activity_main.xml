<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@color/white">

    <!-- Заголовок -->
    <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Health Data"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Steps -->
    <TextView
            android:id="@+id/stepsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/stepsValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@id/stepsLabel"
            app:layout_constraintStart_toEndOf="@id/stepsLabel"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Heart Rate -->
    <TextView
            android:id="@+id/heartRateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/stepsLabel"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/heartRateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-- bpm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@id/heartRateLabel"
            app:layout_constraintStart_toEndOf="@id/heartRateLabel"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Calories -->
    <TextView
            android:id="@+id/caloriesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories:"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/heartRateLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

    <TextView
            android:id="@+id/caloriesValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-- kcal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@id/caloriesLabel"
            app:layout_constraintStart_toEndOf="@id/caloriesLabel"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Distance -->
    <TextView
            android:id="@+id/distanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/caloriesLabel"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/distanceValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-- m"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@id/distanceLabel"
            app:layout_constraintStart_toEndOf="@id/distanceLabel"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Move Minutes -->
    <TextView
            android:id="@+id/moveLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Minutes:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/distanceLabel"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/moveValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-- min"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@id/moveLabel"
            app:layout_constraintStart_toEndOf="@id/moveLabel"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sleep -->
    <TextView
            android:id="@+id/sleepLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/moveLabel"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/sleepValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-- h"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@id/sleepLabel"
            app:layout_constraintStart_toEndOf="@id/sleepLabel"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Кнопка Refresh -->
    <Button
            android:id="@+id/refreshButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Refresh Data"
            android:textAllCaps="false"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/sleepLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
