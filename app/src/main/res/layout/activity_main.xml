<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:padding="24dp"
        tools:context=".ui.MainActivity">

    <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Health Data"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="sans-serif-medium"/>

    <!-- Стилізовані пари: label + value -->
    <!-- Переюзована структура через guideline -->
    <!-- Для скорочення коду можна було б використовувати ViewBinding/Compose -->

    <!-- Кроки -->
    <TextView
            android:id="@+id/stepsLabel"
            style="@style/HealthLabel"
            android:text="Steps:"
            app:layout_constraintTop_toBottomOf="@id/titleText" tools:ignore="MissingConstraints"/>

    <TextView
            android:id="@+id/stepsValue"
            style="@style/HealthValue"
            android:text="0"
            app:layout_constraintBaseline_toBaselineOf="@id/stepsLabel"
            app:layout_constraintStart_toEndOf="@id/stepsLabel"/>

    <!-- Серцебиття -->
    <TextView
            android:id="@+id/heartRateLabel"
            style="@style/HealthLabel"
            android:text="Heart Rate:"
            app:layout_constraintTop_toBottomOf="@id/stepsLabel"
            android:layout_marginTop="20dp" tools:ignore="MissingConstraints"/>

    <TextView
            android:id="@+id/heartRateValue"
            style="@style/HealthValue"
            android:text="-- bpm"
            android:textColor="#E53935"
            app:layout_constraintBaseline_toBaselineOf="@id/heartRateLabel"
            app:layout_constraintStart_toEndOf="@id/heartRateLabel"/>

    <!-- Калорії -->
    <TextView
            android:id="@+id/caloriesLabel"
            style="@style/HealthLabel"
            android:text="Calories:"
            app:layout_constraintTop_toBottomOf="@id/heartRateLabel"
            android:layout_marginTop="20dp" tools:ignore="MissingConstraints"/>

    <TextView
            android:id="@+id/caloriesValue"
            style="@style/HealthValue"
            android:text="-- kcal"
            android:textColor="#FB8C00"
            app:layout_constraintBaseline_toBaselineOf="@id/caloriesLabel"
            app:layout_constraintStart_toEndOf="@id/caloriesLabel"/>

    <!-- Дистанція -->
    <TextView
            android:id="@+id/distanceLabel"
            style="@style/HealthLabel"
            android:text="Distance:"
            app:layout_constraintTop_toBottomOf="@id/caloriesLabel"
            android:layout_marginTop="20dp" tools:ignore="MissingConstraints"/>

    <TextView
            android:id="@+id/distanceValue"
            style="@style/HealthValue"
            android:text="-- m"
            android:textColor="#1E88E5"
            app:layout_constraintBaseline_toBaselineOf="@id/distanceLabel"
            app:layout_constraintStart_toEndOf="@id/distanceLabel"/>

    <!-- Move Minutes -->
    <TextView
            android:id="@+id/moveLabel"
            style="@style/HealthLabel"
            android:text="Move Minutes:"
            app:layout_constraintTop_toBottomOf="@id/distanceLabel"
            android:layout_marginTop="20dp" tools:ignore="MissingConstraints"/>

    <TextView
            android:id="@+id/moveValue"
            style="@style/HealthValue"
            android:text="-- min"
            android:textColor="#43A047"
            app:layout_constraintBaseline_toBaselineOf="@id/moveLabel"
            app:layout_constraintStart_toEndOf="@id/moveLabel"/>

    <!-- Сон -->
    <TextView
            android:id="@+id/sleepLabel"
            style="@style/HealthLabel"
            android:text="Sleep:"
            app:layout_constraintTop_toBottomOf="@id/moveLabel"
            android:layout_marginTop="20dp" tools:ignore="MissingConstraints"/>

    <TextView
            android:id="@+id/sleepValue"
            style="@style/HealthValue"
            android:text="-- h"
            android:textColor="#546E7A"
            app:layout_constraintBaseline_toBaselineOf="@id/sleepLabel"
            app:layout_constraintStart_toEndOf="@id/sleepLabel"/>

    <!-- Кнопка -->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/refreshButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Refresh Data"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_refresh"
            app:iconPadding="8dp"
            app:backgroundTint="#6200EE"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/sleepLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
